<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:descendantFocusability = "blocksDescendants"
    android:background="@drawable/playlist_card_background">
    <ImageView
        android:id="@+id/playlistCoverImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintDimensionRatio="1:1"
        android:scaleType="centerCrop"
        android:adjustViewBounds="false"
        android:clipToOutline="true"
        android:background="@drawable/song_image_rounded_corner"
        app:srcCompat="@drawable/music_cover_image" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/playlistOptionsBtn"
        android:src="@drawable/options_btn"
        android:background="@color/transparent"
        android:foregroundGravity="center"
        android:layout_alignEnd="@id/playlistCoverImageView"
        android:layout_alignBottom="@id/playlistCoverImageView"
        android:layout_marginEnd="10dp"
        android:contentDescription="Options"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>
    <TextView
        android:id="@+id/playlistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Playlist Name"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:maxLines="1"
        android:layout_below="@id/playlistCoverImageView"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/playlistLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6 hours, 40 minutes"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_below="@id/playlistName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>