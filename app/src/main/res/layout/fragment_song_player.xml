<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:id="@+id/songCoverImageView"
        android:src="@drawable/music_cover_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:contentDescription="Song cover image" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/songNamePlayer"
        android:text="SONG NAME"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_below="@id/songCoverImageView"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:ellipsize="end"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/songPlayerCurrentTime"
        android:maxLines="1"
        android:text="02:40"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:gravity="center"
        android:layout_below="@id/songNamePlayer"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_alignBottom="@id/songTimeBarPlayer"/>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/songTimeBarPlayer"
        style="@style/SongPlayerSeekBar"
        android:layout_below="@id/songNamePlayer"
        android:layout_marginTop="50dp"
        android:layout_toStartOf="@id/songPlayerEndTime"
        android:layout_toEndOf="@id/songPlayerCurrentTime"
        android:progress="50"
        android:max="100"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/songPlayerEndTime"
        android:maxLines="1"
        android:gravity="center"
        android:text="03:40"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:layout_below="@id/songNamePlayer"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/songTimeBarPlayer"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/songTimeBarPlayer"
        android:layout_marginTop="50dp"
        android:gravity="center">
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/skip_previous_btn"
            android:scaleType="fitXY"
            android:background="@color/transparent"
            android:contentDescription="Skip to previous" />
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/play_arrow"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:layout_marginStart="50dp"
            android:contentDescription="Play/Pause Button" />
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/skip_forward_btn"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:layout_marginStart="50dp"
            android:contentDescription="Skip to next"/>
    </LinearLayout>
</RelativeLayout>